<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentnamesingleitem"
                android:layout_marginStart="10dp"
                android:text="Bharath"
                android:textSize="22sp"
                android:fontFamily="@font/futuramediumbt"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/attendancedropdown"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="Select"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:endIconDrawable="@drawable/drpdownvector"
                app:endIconMode="dropdown_menu"
                app:hintTextColor="@color/black"
                app:endIconTint="@color/black">

                <AutoCompleteTextView
                    android:id="@+id/gameslogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:completionThreshold="1"
                    android:drawableStart="@drawable/leader"
                    android:drawablePadding="10dp"
                    android:layout_marginEnd="10dp"
                    android:drawableTint="@color/black"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="40dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cursorSelect"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


        </LinearLayout>




</androidx.cardview.widget.CardView>